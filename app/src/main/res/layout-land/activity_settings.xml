<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">



    <TextView
        android:id="@+id/days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="SELECT WORKING DAYS" />

    <CheckBox
        android:id="@+id/monday"
        android:layout_width="wrap_content"
        android:layout_below="@+id/days"
        android:buttonTint="@color/colorPrimary"
        android:layout_alignLeft="@+id/days"
        android:layout_height="wrap_content"
        android:paddingRight="35dp"
        android:paddingLeft="16dp"
        android:textSize="12dp"
        android:layoutDirection="rtl"
        android:text="Monday" />
    <CheckBox
        android:id="@+id/tuesday"
        android:layout_width="wrap_content"
        android:layout_below="@+id/monday"
        android:layout_height="wrap_content"
        android:paddingRight="33dp"
        android:paddingLeft="16dp"
        android:textSize="12dp"
        android:buttonTint="@color/colorPrimary"
        android:layout_alignLeft="@+id/days"
        android:layoutDirection="rtl"
        android:text="Tuesday" />
    <CheckBox
        android:id="@+id/wednesday"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tuesday"
        android:layout_height="wrap_content"
        android:buttonTint="@color/colorPrimary"
        android:paddingRight="10dp"
        android:paddingLeft="16dp"
        android:textSize="12dp"
        android:layout_alignLeft="@+id/days"
        android:layoutDirection="rtl"
        android:text="Wednesday" />
    <CheckBox
        android:id="@+id/thursday"
        android:layout_width="wrap_content"
        android:layout_below="@+id/wednesday"
        android:layout_height="wrap_content"
        android:buttonTint="@color/colorPrimary"
        android:paddingRight="26dp"
        android:paddingLeft="16dp"
        android:textSize="12dp"
        android:layout_alignLeft="@+id/days"
        android:layoutDirection="rtl"
        android:text="Thursday" />
    <CheckBox
        android:id="@+id/friday"
        android:layout_width="wrap_content"
        android:layout_below="@+id/thursday"
        android:layout_height="wrap_content"
        android:buttonTint="@color/colorPrimary"
        android:paddingRight="48dp"
        android:paddingLeft="16dp"
        android:textSize="12dp"
        android:layout_alignLeft="@+id/days"
        android:layoutDirection="rtl"
        android:text="Friday" />
    <CheckBox
        android:id="@+id/saturday"
        android:layout_width="wrap_content"
        android:layout_below="@+id/friday"
        android:layout_height="wrap_content"
        android:buttonTint="@color/colorPrimary"
        android:paddingRight="28dp"
        android:paddingLeft="16dp"
        android:textSize="12dp"
        android:layout_alignLeft="@+id/days"
        android:layoutDirection="rtl"
        android:text="Saturday" />
    <CheckBox
        android:id="@+id/sunday"
        android:layout_width="wrap_content"
        android:layout_below="@+id/saturday"
        android:layout_height="wrap_content"
        android:buttonTint="@color/colorPrimary"
        android:paddingRight="38dp"
        android:paddingLeft="16dp"
        android:textSize="12dp"
        android:layout_alignLeft="@+id/days"
        android:layoutDirection="rtl"
        android:text="Sunday" />

    <TextView
        android:id="@+id/timings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="OFFICE TIMINGS" />

    <TextView
        android:id="@+id/strt"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_below="@+id/timings"
        android:layout_alignLeft="@+id/timings"
        android:text="Start Time"
        android:textSize="12dp"
        android:textStyle="bold"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        />


    <TextView
        android:id="@+id/start_time"
        android:layout_width="100dp"
        android:layout_height="43dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/timings"
        android:layout_toRightOf="@+id/strt"
        android:background="@drawable/edittextstyle"
        android:text="SELECT"
        android:textSize="12dp"
        android:textStyle="bold"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
         />


    <TextView
        android:id="@+id/endt"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_alignLeft="@+id/strt"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/strt"
        android:text="End Time"
        android:textSize="12dp"
        android:textStyle="bold"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        />
    <TextView
        android:id="@+id/end_time"
        android:layout_width="100dp"
        android:layout_height="43dp"
        android:layout_toRightOf="@+id/endt"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/start_time"
        android:background="@drawable/edittextstyle"
        android:text="SELECT"
        android:textSize="12dp"
        android:textStyle="bold"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        />


    <TextView
        android:id="@+id/slot"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="SLOT INTERVALS" />


    <Switch
        android:id="@+id/thirty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slot"
        android:layout_alignLeft="@+id/slot"
        android:layout_marginBottom="8dp"
        android:trackTint="@color/lightBlack"
        android:thumbTint="@color/colorPrimary"
        android:textSize="12dp"
        android:text="30 minutes"
        android:switchPadding="10dp"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <Switch
        android:id="@+id/sixty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thirty"
        android:layout_alignLeft="@+id/slot"
        android:trackTint="@color/lightBlack"
        android:thumbTint="@color/colorPrimary"
        android:text="60 minutes"
        android:textSize="12dp"
        android:switchPadding="10dp"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <Button
        android:id="@+id/apply"
        android:layout_width="742dp"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton"
        android:padding="12dp"
        android:text="APPLY"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:layout_margin="25dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold" />





</RelativeLayout>