<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scheduleActivity">


    <TextView
        android:id="@+id/date"
        android:layout_width="365dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/edittextstyle"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:text="Space for Meeting date"
        android:textSize="22dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="27dp" />

    <TextView
        android:id="@+id/start_time"
        android:layout_width="365dp"
        android:layout_height="50dp"
        android:layout_below="@+id/date"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/edittextstyle"
        android:drawableRight="@drawable/details"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:text="Start Time"
        android:textSize="22dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="112dp" />


    <TextView
        android:id="@+id/end_time"
        android:layout_width="365dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/start_time"
        android:layout_below="@+id/date"
        android:layout_marginTop="18dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/edittextstyle"
        android:drawableRight="@drawable/details"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:text="End Time"
        android:textSize="22dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="424dp"
        tools:layout_editor_absoluteY="112dp" />


    <Button
        android:id="@+id/submit"
        android:layout_width="742dp"
        android:layout_height="50dp"
        android:background="@drawable/mybutton"
        android:padding="12dp"
        android:layout_below="@+id/desc1"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true"
        android:text="SUBMIT"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
         />

    <EditText
        android:id="@+id/desc1"
        android:layout_width="742dp"
        android:layout_height="80dp"
        android:background="@drawable/description"
        android:ems="10"
        android:layout_below="@+id/start_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:gravity="start|top"
        android:hint="Description"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="200dp" />


</RelativeLayout>